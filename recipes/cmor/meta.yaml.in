package:
    name: cmor
    version: @VERSION@.numpy

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/mauzey1/cmor.git

build:
  number: @BUILD_NUMBER@
 
test:
  requires:
    - python
  imports:
    - cmor

requirements:
  build:
    - {{ compiler("c") }}
    - {{ compiler("fortran") }}
  host:
    - python {{ python }}
    - libuuid
    - udunits2
    - six
    - json-c
    - hdf5
    - openblas
    - libnetcdf
    - netcdf4
    - numpy >=1.14
    - setuptools
  run:
    - python {{ python }}
    - libuuid
    - udunits2
    - six
    - json-c
    - hdf5
    - openblas
    - libnetcdf
    - netcdf4
    - numpy >=1.14
  run_constrained:
    - cdms2

about:
    home:  http://gitub.com/PCMDI
