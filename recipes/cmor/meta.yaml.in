package:
    name: cmor
    version: @VERSION@.numpy

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/mauzey1/cmor.git

build:
  number: @BUILD_NUMBER@
 
test:
  requires:
    - python
  imports:
    - cmor

requirements:
  build:
    - {{ compiler("c") }}
    - {{ compiler("fortran") }}
  host:
    - python {{ python }}
    - libuuid
    - udunits2
    - six
    - json-c
    - hdf5
    - openblas 0.3.6
    - libnetcdf 4.7.1
    - netcdf4
    - numpy
    - setuptools
  run:
    - python {{ python }}
    - libuuid
    - udunits2
    - six
    - json-c
    - openblas 0.3.6
    - libnetcdf 4.7.1
    - {{ pin_compatible('numpy') }}
    - {{ pin_compatible('hdf5') }}
    - {{ pin_compatible('netcdf4') }}

about:
    home:  http://gitub.com/PCMDI
